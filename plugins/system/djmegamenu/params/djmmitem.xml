<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="params" addfieldpath="/modules/mod_djmegamenu/fields">
		<fieldset name="djmegamenu-params" label="PLG_DJMEGAMENU_PARAMS_LABEL">
			
			<field name="djmegamenu-hide-title" type="radio" class="btn-group" default="0" label="PLG_DJMEGAMENU_HIDE_TITLE">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field name="djmegamenu-show" type="radio" class="btn-group" default="" label="PLG_DJMEGAMENU_SHOW_ITEM_IN" description="PLG_DJMEGAMENU_SHOW_ITEM_IN_DESC">
				<option value="">PLG_DJMEGAMENU_BOTH</option>
				<option value="mega">PLG_DJMEGAMENU_DESKTOPMENU</option>
				<option value="mobile">PLG_DJMEGAMENU_MOBILEMENU</option>
			</field>

			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_BBCODE_DESC" />
			
			<field name="djmegamenu-subtitle" type="text" size="40" default="" label="PLG_DJMEGAMENU_SUBTITLE" description="PLG_DJMEGAMENU_SUBTITLE_DESC" />
			
			<field name="djmegamenu-badge" type="text" size="40" default="" label="PLG_DJMEGAMENU_BADGE" description="PLG_DJMEGAMENU_BADGE_DESC" />
			<field name="djmegamenu-badge-color" type="color" format="rgba" default="" label="PLG_DJMEGAMENU_BADGE_COLOR" showon="djmegamenu-badge!:" />
			<field name="djmegamenu-badge-text" type="color" format="rgba" default="" label="PLG_DJMEGAMENU_BADGE_TEXT" showon="djmegamenu-badge!:" />

			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_FA_ICON_DESC" />
			<field name="djmegamenu-fa" type="text" size="40" default="" label="PLG_DJMEGAMENU_FA_ICON" />

			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_FULL_WIDTH_SUBMENU_DESC" />
			<field name="djmegamenu-fullwidth" type="djonlypro" class="btn-group" default="0" label="PLG_DJMEGAMENU_FULL_WIDTH_SUBMENU">
				<option value="0">JNO</option>
				<option value="1">PLG_DJMEGAMENU_FULL_WIDTH_SUBMENU_WIDTH_CONTAINER</option>
				<option value="2">PLG_DJMEGAMENU_FULL_WIDTH_SUBMENU_WIDTH_SCREEN</option>
			</field>
			
			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_COLUMN_BREAK_DESC" />
			<field name="djmegamenu-column_break" type="radio" class="btn-group" default="0" label="PLG_DJMEGAMENU_COLUMN_BREAK">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field name="djmegamenu-column_width" type="djonlypro" class="input-mini" default="" label="PLG_DJMEGAMENU_COLUMN_WIDTH" description="PLG_DJMEGAMENU_COLUMN_WIDTH_DESC" />
			<field name="djmegamenu-expand" type="djonlypro" class="btn-group" default="" label="PLG_DJMEGAMENU_SUBMENU_EXPANDED" description="PLG_DJMEGAMENU_SUBMENU_EXPANDED_DESC">
				<option value="">PLG_DJMEGAMENU_INHERIT</option>
				<option value="tree">PLG_DJMEGAMENU_TREE</option>
				<option value="dropdown">PLG_DJMEGAMENU_DROPDOWN</option>
			</field>
			<field name="djmegamenu-dropdown_dir" type="djonlypro" class="btn-group" default="" label="PLG_DJMEGAMENU_DROPDOWN_DIRECTION">
				<option value="">JDEFAULT</option>
				<option value="left">PLG_DJMEGAMENU_LEFT</option>
				<option value="right">PLG_DJMEGAMENU_RIGHT</option>
			</field>
			
			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_SUBMENU_BG_DESC" />
			<field name="djmegamenu-bg_image" type="media" default="" label="PLG_DJMEGAMENU_SUBMENU_BG_IMAGE" />
			<field name="djmegamenu-bg_pos_hor" type="radio" class="btn-group" default="right" label="PLG_DJMEGAMENU_SUBMENU_BG_HOR_POS">
				<option value="left">PLG_DJMEGAMENU_LEFT</option>
				<option value="center">PLG_DJMEGAMENU_CENTER</option>
				<option value="right">PLG_DJMEGAMENU_RIGHT</option>
			</field>
			<field name="djmegamenu-bg_pos_ver" type="radio" class="btn-group" default="bottom" label="PLG_DJMEGAMENU_SUBMENU_BG_VER_POS">
				<option value="top">PLG_DJMEGAMENU_TOP</option>
				<option value="center">PLG_DJMEGAMENU_CENTER</option>
				<option value="bottom">PLG_DJMEGAMENU_BOTTOM</option>
			</field>
			
			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_MODULE_POSITION_DESC" />
			<field name="djmegamenu-module_pos" type="djonlypro" size="20" default="" label="PLG_DJMEGAMENU_MODULE_POSITION" />
			<field name="djmegamenu-module_style" type="djonlypro" default="System-xhtml" description="PLG_DJMEGAMENU_MODULES_STYLE_DESC" label="PLG_DJMEGAMENU_MODULES_STYLE" />
			<field name="djmegamenu-module_show_link" type="djonlypro" class="btn-group" default="0" label="PLG_DJMEGAMENU_MODULE_SHOW_LINK" description="PLG_DJMEGAMENU_MODULE_SHOW_LINK_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			
			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_MOBILE_MODULE_POSITION_DESC" />
			<field name="djmobilemenu-module_pos" type="djonlypro" size="20" default="" label="PLG_DJMEGAMENU_MOBILE_MODULE_POSITION" />
			<field name="djmobilemenu-module_style" type="djonlypro" default="System-xhtml" description="PLG_DJMEGAMENU_MOBILE_MODULES_STYLE_DESC" label="PLG_DJMEGAMENU_MOBILE_MODULES_STYLE" />
			<field name="djmobilemenu-module_show_link" type="djonlypro" class="btn-group" default="0" label="PLG_DJMEGAMENU_MOBILE_MODULE_SHOW_LINK" description="PLG_DJMEGAMENU_MOBILE_MODULE_SHOW_LINK_DESC">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>

			<field type="djspacer" class="djinfo" label="PLG_DJMEGAMENU_CUSTOM_HTML_ATTR_DESC" />
			<field name="djmegamenu-html-pos" type="radio" default="0" label="PLG_DJMEGAMENU_CUSTOM_HTML_POS" description="PLG_DJMEGAMENU_CUSTOM_HTML_POS_DESC">
				<option value="0">PLG_DJMEGAMENU_CUSTOM_HTML_POS_INSIDE</option>
				<option value="1">PLG_DJMEGAMENU_CUSTOM_HTML_POS_OUTSIDE</option>
			</field>
			<field name="djmegamenu-html-before" type="textarea" default="" label="PLG_DJMEGAMENU_CUSTOM_HTML_BEFORE" description="PLG_DJMEGAMENU_CUSTOM_HTML_BEFORE_DESC" rows="5" cols="5" filter="raw" />
			<field name="djmegamenu-html-after" type="textarea" default="" label="PLG_DJMEGAMENU_CUSTOM_HTML_AFTER" description="PLG_DJMEGAMENU_CUSTOM_HTML_AFTER_DESC" rows="5" cols="5" filter="raw" />
			<field name="djmegamenu-custom-attr" type="textarea" default="" label="PLG_DJMEGAMENU_CUSTOM_ATTRIBUTES" description="PLG_DJMEGAMENU_CUSTOM_ATTRIBUTES_DESC" filter="raw" />
			
			<field type="spacer" label="&lt;hr &#47;&gt;" />
			<field name="djmegamenu-accesskey" type="text" size="1" maxlength="1" default="" class="input-mini" label="PLG_DJMEGAMENU_ACCESSKEY" description="PLG_DJMEGAMENU_ACCESSKEY_DESC" />
		</fieldset>
	</fields>
</form>